@model api_fetch.Areas.Root.ViewModel.Expenses.ExpensesSearchVm
<div class="main-container">
    <div class="row">
        <div class="col-12">
            <form method="post">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2">
                                <div class="form-group">
                                    <label>Date From</label>
                                    <vc:date-input name="Date" value="DateTime.Today"/>
                                </div>
                            </div>
                            @* <div class="col-2"> *@
                            @*     <div class="form-group"> *@
                            @*         <label asp-for="EndDate">Date To</label> *@
                            @*         <vc:date-input-vc value="Model.EndDate" name="@nameof(Model.EndDate)"/> *@
                            @*     </div> *@
                            @* </div> *@
                            <div class="col-md-2">
                                <lable>&nbsp;</lable>
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block">
                                        <i class="fas fa-search"></i>
                                        Search
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-12 text-center">
                            <strong>List</strong>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-condensed">
                        <thead>
                        <tr>
                            <th>S.n</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Amount</th>
                        </tr>
                        </thead>
                        <tbody>

                        @{
                            @foreach (var item in Model.ExpensesCategories)
                            {
                                <tr>
                                    <td>@item.Expenses</td>
                                    <td>@item.Status</td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>