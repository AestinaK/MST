@using Microsoft.VisualBasic
@model api_fetch.Areas.Setup.ViewModel.Reminder.ReminderVm
<div class="main-container">
    <form method="post">
        <div class="row">
            <div class="col-6">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Add Expenses category</strong>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="CategoryId"></label>
                            <select asp-for="CategoryId" class="form-control chosen" name="CategoryId" asp-items="@Model.GetCategoryList();">
                                <option value="">--Select-- </option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="DueDate"></label>
                            <input type="date" asp-for="DueDate" name="DueDate" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" class="form-control" rows="5" name="Description"></textarea>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col"></div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block">
                                        <i class="fas fa-check"></i>
                                        Save
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card">
                    <div class="card-header">
                        <strong>Reminders</strong>
                    </div>
                    <div class="card-body">
                        <table>
                            <thead>
                            <tr>
                                <th>S.n</th>
                                <th>Name</th>
                                <th>Date</th>
                                <th>
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            @{
                                int i = 1;
                                foreach (var item in Model.Reminders)
                                {
                                    <tr>
                                        <td>@(i++)</td>
                                        <td>@item.Name</td>
                                        <td>@item.Date</td>
                                        <td>
                                            <a asp-area="Setup" asp-controller="Reminder" asp-route-id="@item.Id" class="btn btn-danger">
                                                <i class="fa fa-trash-o"></i>
                                                Remove
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>