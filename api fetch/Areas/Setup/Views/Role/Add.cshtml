@model api_fetch.Areas.Setup.ViewModel.RoleVm

<div class="main-container">
    <div class="row">
        <div class="col-8">
            <form method="post">
                <div class="card">
                    <div class="card-header">
                        <strong>Add Role</strong>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-8">
                                <div class="form-group">
                                    <label asp-for="Name"></label>
                                    <input type="text" asp-for="Name" class="form-control" name="Name"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8">
                                <div class="form-group">
                                    <label asp-for="Description"></label>
                                    <textarea class="form-control" asp-for="Description" rows="5" name="Description"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col"></div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block">
                                        <i class="fa fa-save"></i>
                                        Save
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <a class="btn btn-primary" asp-controller="Role" asp-action="Index">
                                        <i class="fa fa-eye"></i>
                                        View Data
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>