@model api_fetch.Areas.Setup.ViewModel.IncomeC.IncomeCVm

<div class="main-controller">
    <form method="post">
        <div class="row">
            <div class="col-6">
                <div class="card">
                    <div class="card-header">
                        <strong>Add Income Category</strong>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="text" asp-for="Name" class="form-control" required/>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <textarea class="form-control" asp-for="Description" rows="5"></textarea>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col"></div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block">
                                        <i class="fa fa-save"></i>
                                        Save
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card">
                    <div class="panel panel-info">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-12">
                                    <div class="scroll-v">
                                        <table class="table table-condensed table-hover ">
                                            <thead>
                                            <tr>
                                                <th>S.N</th>
                                                <th>Category</th>
                                                <th>Action</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            @{
                                                int i = 1;
                                                foreach (var item in Model.Categories)
                                                {
                                                    <tr>
                                                        <td>@(i++)</td>
                                                        <td>@item.Name</td>
                                                        <td>
                                                            <a class="btn btn-outline-danger" asp-area="Setup" asp-controller="IncomeC" asp-action="Delete"
                                                               asp-route-id="@item.Id">
                                                                <i class="fa fa-trash"></i>
                                                                Remove
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>