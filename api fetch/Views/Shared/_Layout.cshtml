@if (TempData["success"] != null)
{
    <script>
            $(function () {

                var Toast = Swal.mixin({
                    toast: true,
                    position: 'bottom-end',
                    showConfirmButton: false,
                    timer: 100000
                });

                Toast.fire({
                    icon: 'success',
                    title: '@Html.Raw(TempData["success"])'
                })

            });

        </script>
}

@if (TempData["error"] != null)
{
    <script>
            $(function () {

                var Toast = Swal.mixin({
                    toast: true,
                    position: 'bottom-end',
                    showConfirmButton: false,
                    timer: 3000
                });

                $(function () {
                    Toast.fire({
                        icon: 'error',
                        title: '@Html.Raw(TempData["error"])'
                    })
                });
            })
        </script>
}

